        <br>
        <div class="card">
            <div class="card-header">
                <h3>Editar categoria</h3>
            </div>
            <div class="card-body">
                <form action="/categories/update" method="post">
                    <input class = "form-control" type = "text" name="title" placeholder="Defina o tipo da categoria" value="<%= category.title %> ">
                    <br>

                    <input type="hidden" name="id" value="<%= category.id %> ">

                    <button class = "btn-primary" style="border-radius: 3px;">Atualizar</button> 
                    <br>    
                </form>
            </div>
        </div>
    </div>
</body>

